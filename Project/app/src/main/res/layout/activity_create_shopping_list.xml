<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateShoppingList">

    <!-- First Button (Covers the whole upper half of the screen) -->
    <Button
        android:id="@+id/finishOrderButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#FFEB3B"
        android:text="Finish order"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/xButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Second Button (Covers 1/4 of the screen to the left of the third button) -->
    <Button
        android:id="@+id/xButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/red"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addItemButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finishOrderButton" />

    <!-- Third Button (Covers 1/4 of the screen to the right of the second button) -->
    <Button
        android:id="@+id/addItemButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/green"
        android:text="Add item"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/xButton"
        app:layout_constraintTop_toBottomOf="@+id/finishOrderButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
